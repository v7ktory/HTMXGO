{{ define "signup" }}

<div id="signup" class="container mt-2 bg-gray-900 rounded-xl text-white p-4">
    <form hx-post="/auth/signup" hx-trigger="submit" onsubmit="return submitForm()">

        <h1 class="text-2xl text-center">Регистрация</h1>

        <label for="name" class="block mt-2">Имя пользователя:</label>
        <input type="text" id="name" name="name" class="w-full p-2 border rounded mt-1  text-gray-800" required placeholder="Твоё имя">

        <label for="email" class="block mt-2">Электронная почта:</label>
        <input type="email" id="email" name="email" class="w-full p-2 border rounded mt-1  text-gray-800" required placeholder="Твоя почта">

        <div id="error-message" class="text-red-500 mt-2"></div>

        <label for="password" class="block mt-2">Пароль:</label>
        <input type="password" id="password" name="password" class="w-full p-2 border rounded mt-1  text-gray-800" minlength="6" required placeholder="Минимум 6 символов">

        <button type="submit" class="mt-4 bg-blue-800 text-white hover:bg-blue-700 py-2 px-4 rounded-full transition duration-300 w-full">Зарегистрироваться</button>
    </form>
    <button id="close" class="absolute top-2 right-2 text-gray-400">x</button>
</div>

{{ end }}

